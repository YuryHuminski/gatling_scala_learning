{
  "ci": {
    "collect": {
      "settings": {
        "preset": "desktop",
        "maxWaitForLoad": 60000
      },
      "numberOfRuns": 1
    },
    "assert": {
      "assertions": {
        "largest-contentful-paint": ["error", {"maxNumericValue": 250, "aggregationMethod": "optimistic"}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.25, "aggregationMethod": "optimistic"}]
      }
    }
  }
}